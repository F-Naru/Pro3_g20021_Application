<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_idm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IDm"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_text_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ユーザ名"
        android:layout_below="@id/edit_text_idm"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_text_student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="学籍番号(職員番号)"
        android:layout_below="@id/edit_text_user_name"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_text_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="現在残高"
        android:layout_below="@id/edit_text_student_id"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_text_add_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="追加残高"
        android:layout_below="@id/edit_text_balance"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/add_balance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_add_balance"
        android:layout_marginTop="16dp"
        android:text="残高追加" />

</RelativeLayout>
